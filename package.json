{
  "name": "mcp-server-framework",
  "version": "independent",
  "description": "A comprehensive framework for building Model Context Protocol (MCP) servers with transport-agnostic codecs and utilities",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "pnpm -r build",
    "build:docs": "pnpm docs:generate",
    "test": "jest --passWithNoTests",
    "test-fixtures": "jest --testNamePattern='Fixture' --runInBand",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "docs:generate": "typedoc",
    "docs:build": "pnpm build && pnpm docs:generate",
    "docs:serve": "pnpm docs:generate && pnpm dlx serve docs/api",
    "docs:clean": "rm -rf docs/api",
    "check:types": "pnpm check:surface && pnpm check:api-extractor",
    "check:surface": "pnpm exec attw --pack packages/core --format json | diff .api-surface-lock.json - || (echo '❌ API surface has changed! Run: pnpm update:surface' && exit 1)",
    "check:api-extractor": "cd packages/core && pnpm exec api-extractor run",
    "update:surface": "pnpm exec attw --pack packages/core --format json > .api-surface-lock.json && echo '✅ API surface lock updated'",
    "update:api-reports": "cd packages/core && pnpm exec api-extractor run --local && echo '✅ API reports updated'",
    "quality:gate": "ts-node scripts/quality-gate.ts",
    "quality:gate:simple": "pnpm lint && pnpm typecheck && pnpm typecheck:test && pnpm test",
    "quality:fix": "pnpm lint:fix && pnpm quality:gate",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "version:dry": "changeset version --snapshot dev && changeset status"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "framework",
    "json-rpc",
    "codec",
    "transport-agnostic",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.0.6",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@microsoft/api-extractor": "^7.52.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2"
  }
}
